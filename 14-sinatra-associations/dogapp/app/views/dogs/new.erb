<h1>Create new Dog</h1>

<a href="/dogs">Go back</a>

<form action="/dogs" method="post">
  <div>
    <label for="name">Name:</label>
    <input id="name" type="text" name="dog[name]" />
  </div>
  <div>
    <label for="age">Age:</label>
    <input id="age" type="number" name="dog[age]" />
  </div>
  <hr>
  <div>
    <h4> Select people who walk this dog </h4>
    <% @people.each do |person| %>
      <input
        type="checkbox"
        id="person-<%= person.id %>"
        name="dog[person_ids][]"
        value="<%= person.id %>"
      />
      <label for="person-<%= person.id %>"> <%= person.name %> </label> 
    <% end %>
  </div>
  
  <input type="submit" value="Create new Dog" />
</form>
